<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Ödev 1 - Ağ Programlama</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>

    <script type="text/javascript">
        function toggler(divId) {
            $("#" + divId).toggle();
        }
        function ShowLectureContent() {
            document.location.href = "#";
            toggler("hidden");
        }
        </script>
        <style type="text/css">
        #MyLecture {
            cursor: pointer;
        }
        #hidden {
            display: none;
            color:red;
        }
    </style>
</head>
<body>
<div class="card" id="tab">
    <div class="card-header">
        Ders Programı
    </div>
    <div class="card-body">
        <table class="table table-striped">
		  <thead>
			<tr>
			  <th scope="col">Sıra No</th>
			  <th scope="col">Ders Kodu</th>
			  <th scope="col">Ders Adı</th>
			</tr>
		  </thead>
		  <tbody>
            <% for(var i=0; i<content.length; i++) {%>
                <% if (i == 4) { %>
                    <tr id ="MyLecture" OnClick="ShowLectureContent()">
                        <th scope="row"><%= i %></th>
                        <td><%= content[i].code %></td>
                        <td><%= content[i].name %></td>
                    </tr>
                <% } else { %>
                    <tr>
                        <th scope="row"><%= i %></th>
                        <td><%= content[i].code %></td>
                        <td><%= content[i].name %></td>
                    </tr>
                <% } %>
            <% } %>
		  </tbody>
        </table>
        <div class="container" id="hidden">
            <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text" id="basic-addon1">Dersin Kodu:</span>
                    </div>
                    <input type="text" class="form-control" placeholder="Kod giriniz" aria-label="Username" aria-describedby="basic-addon1">
                </div>
        
                
                <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="basic-addon1">Dersin Adı:</span>
                        </div>
                        <input type="text" class="form-control" placeholder="İsim giriniz" aria-label="Username" aria-describedby="basic-addon1">
                </div>
        
                    
                <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="basic-addon1">Dersin İçeriği:</span>
                        </div>
                        <input type="text" class="form-control" placeholder="İçerik giriniz" aria-label="Username" aria-describedby="basic-addon1">
                </div>
        
                <button type="button" class="btn btn-primary btn-sm">XML Göster</button>
                <button type="button" class="btn btn-primary btn-sm">JSON Göster</button>
        
                <div class="form-group">
                        <label for="exampleFormControlTextarea1">Kodlanmış Veri</label>
                        <textarea class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
                </div>        
        </div>
</body>
</html>